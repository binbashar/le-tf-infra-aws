{
  "openapi": "3.0.0",
  "info": {
    "title": "Document Validation API",
    "version": "1.0.0",
    "description": "API for validating processed documents"
  },
  "paths": {
    "/validate": {
      "post": {
        "summary": "Validate a document",
        "description": "Validates a processed document against specified rules",
        "operationId": "validateDocument",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "documentId": {
                    "type": "string",
                    "description": "ID of the document to validate"
                  },
                  "pageNumber": {
                    "type": "integer",
                    "description": "Page number to validate"
                  },
                  "validationRules": {
                    "type": "object",
                    "description": "Optional validation rules to apply",
                    "properties": {
                      "requiredFields": {
                        "type": "object",
                        "properties": {
                          "type": {
                            "type": "string",
                            "enum": ["required"]
                          },
                          "fields": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          }
                        }
                      },
                      "emailFields": {
                        "type": "object",
                        "properties": {
                          "type": {
                            "type": "string",
                            "enum": ["email"]
                          },
                          "fields": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          }
                        }
                      },
                      "dateFields": {
                        "type": "object",
                        "properties": {
                          "type": {
                            "type": "string",
                            "enum": ["date"]
                          },
                          "fields": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "required": ["documentId", "pageNumber"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Document successfully validated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "documentId": {
                      "type": "string",
                      "description": "ID of the validated document"
                    },
                    "pageNumber": {
                      "type": "integer",
                      "description": "Page number that was validated"
                    },
                    "validationResults": {
                      "type": "object",
                      "properties": {
                        "isValid": {
                          "type": "boolean",
                          "description": "Whether the document passed validation"
                        },
                        "validationErrors": {
                          "type": "array",
                          "description": "List of validation errors",
                          "items": {
                            "type": "object",
                            "properties": {
                              "field": {
                                "type": "string",
                                "description": "The field that failed validation"
                              },
                              "rule": {
                                "type": "string",
                                "description": "The validation rule that failed"
                              },
                              "message": {
                                "type": "string",
                                "description": "Error message"
                              }
                            }
                          }
                        },
                        "validationWarnings": {
                          "type": "array",
                          "description": "List of validation warnings",
                          "items": {
                            "type": "object",
                            "properties": {
                              "field": {
                                "type": "string",
                                "description": "The field with a warning"
                              },
                              "rule": {
                                "type": "string",
                                "description": "The validation rule that triggered the warning"
                              },
                              "message": {
                                "type": "string",
                                "description": "Warning message"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request parameters"
          },
          "404": {
            "description": "Document not found"
          },
          "422": {
            "description": "Document not ready for validation"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
} 