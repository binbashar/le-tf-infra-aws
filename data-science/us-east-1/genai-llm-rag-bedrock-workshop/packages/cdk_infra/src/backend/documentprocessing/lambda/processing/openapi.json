{
  "openapi": "3.0.0",
  "info": {
    "title": "Document Processing API",
    "version": "1.0.0",
    "description": "API for processing documents"
  },
  "paths": {
    "/process": {
      "post": {
        "summary": "Process a document",
        "description": "Processes a document according to the specified blueprint",
        "operationId": "processDocument",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "documentId": {
                    "type": "string",
                    "description": "ID of the document to process"
                  },
                  "documentType": {
                    "type": "string",
                    "description": "Type of the document (e.g., invoice, receipt)"
                  },
                  "blueprintId": {
                    "type": "string",
                    "description": "ID of the blueprint to use for processing"
                  },
                  "processingOptions": {
                    "type": "object",
                    "description": "Additional processing options"
                  }
                },
                "required": ["documentId", "documentType", "blueprintId"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Processing successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "description": "Processing status"
                    },
                    "processedDocument": {
                      "type": "object",
                      "description": "Processed document data"
                    },
                    "processingMetadata": {
                      "type": "object",
                      "description": "Metadata about the processing"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
} 